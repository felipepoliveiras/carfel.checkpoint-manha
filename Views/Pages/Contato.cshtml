@{
    Layout = "MasterPagePadrao";
    ViewBag.Title = "Contato";
}

@section styles {
 
  <link href="/css/contato.css" rel="stylesheet" />

}

@Html.Partial("BannerSlider")

<!-- Page Content -->
    <div class="jumbotron jumbotron-sm">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-lg-12">
            <h1 class="h1">
              Contato
              <small>Envie uma mensagem que logo entraremos em contato</small>
            </h1>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="well well-sm">
            <form>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="nome"> Nome</label>
                    <input
                      type="text"
                      class="form-control"
                      id="nome"
                      placeholder="Informe seu nome"
                      required="required"
                    />
                  </div>
                  <div class="form-group">
                    <label for="email"> Email</label>
                    <div class="input-group">
                      <span class="input-group-addon"
                        ><span class="glyphicon glyphicon-envelope"></span>
                      </span>
                      <input
                        type="email"
                        class="form-control"
                        id="email"
                        placeholder="Informe seu  email"
                        required="required"
                      />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="subject"> Assunto</label>
                    <select
                      id="assunto"
                      name="assunto"
                      class="form-control"
                      required="required"
                    >
                      <option value="na" selected="">Selecione:</option>
                      <option value="suporteTecnico">Suporte Técnico</option>
                      <option value="comercial">Comercial</option>
                      <option value="cancelamento">Cancelamento</option>
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="name"> Mensagem</label>
                    <textarea
                      name="message"
                      id="mensagem"
                      class="form-control"
                      rows="9"
                      cols="25"
                      required="required"
                      placeholder="Mensagem"
                    ></textarea>
                  </div>
                </div>
                <div class="col-md-12">
                  <button
                    type="submit"
                    class="btn btn-primary pull-right"
                    id="btnContato"
                  >
                    Enviar Mensagem
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-4">
          <form>
            <legend>
              <span class="glyphicon glyphicon-globe"></span> Endereço
            </legend>
            <address>
              <strong>Senai Informática</strong><br />
              Alameda Barão de Limeira, 539<br />
              Santa Cecilia, São Paulo - SP, 01202-001<br />
              <abbr title="Phone"> Tel:</abbr> (11) 95842-5865
            </address>
            <address>
              <strong>Nome</strong><br />
              <a href="mailto:#">seuemail@seuemail.com</a>
            </address>
          </form>
        </div>
      </div>
    </div>
    <br />
    <br />
